pipeline{
    agent none
parameters {
  choice choices: ['BUILD', 'Test', 'Deploy', 'test', 'DEPLOY'], name: 'enter the stage ?? '
}

    stages {
                stage ('BUILD') {
            agent { label 'masterkeynode' }

            steps{
                sh "echo Hi "
            }
        }
        
        stage ('Test') {
            parallel{
                stage ('Deploy'){
                agent { label 'masterkeynode' }
                   steps{
                    sh "pwd"
                }
                }
                stage ('test'){
                agent { label 'masterkeynode' }

                    steps{
                        sh "echo hi"
                    }
                }
            }
        }
        
        
        stage ('DEPLOY') {
            agent { label 'node1-cproject' }

            steps{
                sh "echo Hi "
            }
        }

        
    }
 }
