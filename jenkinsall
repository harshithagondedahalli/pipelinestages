pipeline{
    agent any
    stages{
        stage ('BUILD') {
            steps{
                sh "echo Hi "
            }
        }
        stage ('Test') {
            parallel{
                stage('Deploy'){
                steps{
                    sh "pwd"
                }
                }
                stage('Test'){
                    steps{
                        sh "$?"
                    }
                }
            }

        }
    }
}